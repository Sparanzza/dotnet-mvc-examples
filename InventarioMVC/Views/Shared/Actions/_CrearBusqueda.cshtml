@using InventarioMVC.ViewModels
@model InventarioMVC.ViewModels.CrearBusquedaViewModel
<p class="text-end">
    @Model.Total registros
</p>

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-primary" asp-action="Create">
            <i class="fa-solid fa-add"></i>&nbsp; @Model.TituloCrear
        </a>
    </div>
    <div class="col-md-6">
        <form>
            <div class="row">
                <div class="input-group">
                    <input asp-for="FiltroBusqueda" class="form-control" placeholder="Término de Búsqueda"
                        aria-label="Término de Búsqueda" />
                    <button class="btn btn-info" name="botonBusqueda" id="botonBusqueda" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>&nbsp; Buscar
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fa-solid fa-arrows-rotate"></i>&nbsp; Limpiar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>